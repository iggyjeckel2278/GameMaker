            <string>/// async network stuff( connect, disconnect, data )
var eventType = ds_map_find_value(async_load, "type");
switch(eventType)
{
    case network_type_connect:
        var socket = ds_map_find_value(async_load, "socket");
        ds_list_add(sockets, socket);
        
        scr_showNotifaction("A new player has connected");
    break;
    
    case network_type_disconnect:
         var socket = ds_map_find_value(async_load, "socket");
         var findSocket = ds_list_find_index(sockets, socket);
         
         if (findSocket &gt;= 0)
         {
            ds_list_delete(sockets, findSocket);   
         }

        scr_showNotifaction("A player has left");
    break;
    
    case network_type_data:
        var buffer = ds_map_find_value(async_load, "buffer");
        var socket = ds_map_find_value(async_load, "id");
        buffer_seek(buffer, buffer_seek_start, 0);
        scr_handleIncomingPackets(buffer, socket);   
    
    break;
}
</string>
